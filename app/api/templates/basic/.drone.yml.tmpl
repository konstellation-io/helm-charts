kind: secret
name: minio-key-id
get:
  path: mlflow-server-secret
  name: AWS_ACCESS_KEY_ID

---

kind: secret
name: minio-secret
get:
  path: mlflow-server-secret
  name: AWS_SECRET_ACCESS_KEY

---

kind: pipeline
type: kubernetes
name: application-examples

trigger:
  ref:
  - refs/tags/run-examples-*

environment:
  PYTHONPATH: /drone/src/lab
  MINIO_DATA_FOLDER: /shared-storage/{{ .ProjectID }}/data
  MLFLOW_URL: {{ .MLFlowURL }}
  MLFLOW_S3_ENDPOINT_URL: {{ .MinioURL }}
  MLFLOW_EXPERIMENT: {{ .ProjectID }}

steps:
  - name: sklearn-example
    image: terminus7/sci-toolkit-runner:1.1.2
    environment:
      AWS_ACCESS_KEY_ID:
        from_secret: minio-key-id
      AWS_SECRET_ACCESS_KEY:
        from_secret: minio-secret
    commands:
      - python3 lab/processes/sklearn_example/main.py
    volumes:
        - name: shared-storage
          path: /shared-storage

  - name: pytorch-example
    image: terminus7/sci-toolkit-runner:1.1.2
    environment:
      AWS_ACCESS_KEY_ID:
        from_secret: minio-key-id
      AWS_SECRET_ACCESS_KEY:
        from_secret: minio-secret
    commands:
      - python3 lab/processes/pytorch_example/main.py
    volumes:
        - name: shared-storage
          path: /shared-storage

volumes:
  - name: shared-storage
    claim:
      name: {{ .SharedPVC }}
